{
  "name": "mm-preview",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node packages/sdk/scripts/create-stubs.js",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:biome": "biome check .",
    "lint:biome:fix": "biome check --write .",
    "typecheck": "turbo run type-check",
    "check": "npm run lint:biome && npm run typecheck",
    "check:fix": "npm run lint:biome:fix && npm run typecheck",
    "check:all": "npm run check",
    "pre-commit": "npm run check",
    "format": "biome format --write",
    "format:imports": "biome check --write",
    "format:all": "biome check --write",
    "test": "turbo run test",
    "storybook": "turbo run storybook",
    "sdk:generate": "npm run generate:all -w @mm-preview/sdk",
    "sdk:generate:swagger": "npm -C packages/sdk run generate:swagger"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "turbo": "^2.3.3",
    "typescript": "^5"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "lightningcss": "^1.30.2"
  }
}
